{
  "manifest_version": 3,
  "name": "HTML Content Downloader",
  "version": "1.0",
  "description": "Download HTML content by element ID",
  "permissions": [
    "activeTab",
    "downloads",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
